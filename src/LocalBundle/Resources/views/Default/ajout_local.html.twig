
{% extends 'Front.html.twig' %}


{% block container %}



    <h3>Ajouter un local</h3>
    <ol class="breadcrumb">
        <li><a href="{{ path('local_homepage') }}">Home</a></li>
        <li class="active" >Ajouter un local</li>

    </ol>

    <div class="col-md-12">
        <div class="col-md-6">

            {{ form_start(Form) }}

            <div  class="form-group" >
                <i class="fa fa-keyboard-o" ></i>
                <h4>Veuillez choisir le nom du local  </h4>
                {{ form_widget(Form.nomLocal, {'attr': {'placeholder': 'Nom local','class':'form-control placeholder-no-fix','required' : 'true'}}) }}
                {{ form_errors(Form.nomLocal) }}
                <div class="clearfix"></div>
            </div>
            <div  class="form-group">
                <h4>Veuillez choisir la description du local   </h4>
                <i class="fa fa-clipboard" ></i>
                {{ form_widget(Form.description, {'attr': {'placeholder': 'description','class':'form-control placeholder-no-fix','required' : 'true'}}) }}
                {{ form_errors(Form.description) }}
                <div class="clearfix"></div>
            </div>
            <div  class="form-group">
                <i class="fa fa-sort-numeric-asc" ></i>
                <h4>Veuillez choisir la superficie du local   </h4>
                {{ form_widget(Form.superficie, {'attr': {'placeholder': 'superficie','class':'form-control placeholder-no-fix','required' : 'true'}}) }}
                {{ form_errors(Form.superficie) }}
                <div class="clearfix"></div>
            </div>
            <div  class="form-group">
                <i class="fa fa-paper-plane" ></i>
                <h4>Veuillez choisir la localisation du local   </h4>
                {{ form_widget(Form.localisation, {'attr': {'placeholder': 'localisation','class':'form-control placeholder-no-fix','required' : 'true'}}) }}
                {{ form_errors(Form.localisation) }}

                <div class="clearfix"></div>
            </div>

        </div>




    </div>


    {{ form_end(Form) }}



{% endblock %}